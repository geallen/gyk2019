<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gykizmir.com.geziuygulamasi.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:id="@+id/linearL"
        android:gravity="center">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nav_profile_picture"/>


        <ImageView
            android:id="@+id/change_profile_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/add_photo_ic"/>

    </LinearLayout>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearL"
        android:text="Gamze Sen"
        android:textSize="16dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/profile_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/userName"
        android:text="Gezmeyi ve okumayi seven bir gezgin"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/profile_gezilenYerler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_bio"
        android:text="Gezdigim Iller : Izmir, Istanbul, Ankara, Denizli"
        android:textSize="16dp"/>

    <ImageView
        android:id="@+id/instagram_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/profile_gezilenYerler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/instagram_ic"/>


</RelativeLayout>
